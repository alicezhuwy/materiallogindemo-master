<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cardetail"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:id="@+id/car_detail_photo"
                android:src="@drawable/audi11"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/car_detail_brand"
                android:layout_below="@+id/car_detail_photo"
                android:textSize="30sp"
                android:text="brand"
                android:paddingLeft="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/car_detail_name"
                android:textSize="30sp"
                android:text="Name"
                android:layout_below="@+id/car_detail_photo"
                android:layout_toLeftOf="@+id/btn_addWishlist"
                android:layout_toStartOf="@+id/btn_addWishlist" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/car_detail_year"
                android:layout_below="@+id/car_detail_name"
                android:text="1999test"
                android:textSize="20sp"
                android:paddingTop="10dp"
                android:paddingLeft="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/car_detail_miles"
                android:layout_below="@+id/car_detail_year"
                android:text="2000ktest"
                android:textSize="20sp"
                android:paddingTop="10dp"
                android:paddingLeft="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/car_detail_price"
                android:layout_below="@+id/car_detail_miles"
                android:text="$1000"
                android:textSize="20sp"
                android:paddingTop="10dp"
                android:paddingLeft="16dp"
                />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_contactSeller"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="Email to seller"
                android:padding="16dp"
                android:layout_alignParentBottom="true" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_addWishlist"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="Email to seller"
                android:padding="16dp"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/car_detail_photo"
                android:layout_alignEnd="@+id/car_detail_photo" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
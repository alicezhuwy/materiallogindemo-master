    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/carlist"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            >

            <ImageButton
                android:layout_width="140dp"
                android:layout_height="100dp"
                android:id="@+id/car_photo"
                android:background="@drawable/logo"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/car_name"
                android:layout_toRightOf="@+id/car_photo"
                android:layout_alignParentTop="true"
                android:textSize="30sp"
                android:text="Name"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/car_year"
                android:layout_toRightOf="@+id/car_photo"
                android:layout_below="@+id/car_name"
                android:text="1999test"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/car_miles"
                android:layout_toRightOf="@+id/car_photo"
                android:layout_below="@+id/car_year"
                android:text="2000ktest"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/car_price"
                android:layout_toRightOf="@+id/car_photo"
                android:layout_below="@+id/car_miles"
                android:text="$1000"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>